<fieldset class="no-border-top">
  <div>
    <table class="index sortable" data-hook="images_table">
      <colgroup>
        <col style="width: 20%">
        <col style="width: 80%">
      </colgroup>
      <thead>
      <tr data-hook="images_header">
        <th>Description Key</th>
        <th>Description</th>
      </tr>
      </thead>

      <tbody>
      <% @scheduled_sale.scheduled_sale_descriptions.each do |d| %>
          <tr class="<%= cycle('odd', 'even')%>">
            <td class="no-border">
              <%= d.key %>
            </td>
            <td>
              <%= d.description %>
            </td>
          </tr>
      <% end %>
      </tbody>
    </table>
  </div>
  <br>
</fieldset>

